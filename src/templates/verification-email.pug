        padding: 0;
      }
      .container {
        max-width: 600px;
        margin: 20px auto;
        background: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
      }
      .header {
        font-size: 24px;
        color: #333;
        margin-bottom: 10px;
      }
      .message {
        font-size: 16px;
        color: #555;
        line-height: 1.5;
        margin-bottom: 20px;
      }
      .btn {
        display: inline-block;
        padding: 12px 24px;
        color: #ffffff;
        background-color: #4caf50;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        border-radius: 4px;
        transition: background-color 0.3s ease;
      }
      .btn:hover {
        background-color: #45a049;
      }
      .footer {
        font-size: 14px;
        color: #aaa;
        margin-top: 20px;
      }
